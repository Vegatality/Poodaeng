{
    "extends": [
        "airbnb",
        "eslint:recommended",
        // "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        // "eslint",
        "prettier"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    },
    "rules": {
        "no-console": "off",
        "no-var": "error",
        "prettier/prettier": 0,
        "no-extra-semi": "error",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    }
}