{
  "extends": [
    "airbnb",
    "eslint:recommended",
    // "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    // "eslint",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "no-var": "error",
    "prettier/prettier": 0,
    "no-extra-semi": "error",
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
